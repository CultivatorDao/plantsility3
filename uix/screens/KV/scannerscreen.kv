<ScannerScreen>

    MDBoxLayout:
        orientation: "vertical"
        padding: [0, 15, 0, 20]

        FitImage:
            source: "resources/source/scan.png"
            size_hint_y: .6

        MDCard:
            md_bg_color: 31/255, 31/255, 31/255, 0.7
            radius: 36
            size_hint: .9, .2
            pos_hint: {"center_x": .5}
            spacing: 15
            padding: [20, 0, 15, 0]

            Image:
                source: "resources/source/plant_pot.png"
                size_hint: 0.5, 1

            MDBoxLayout:
                orientation: "vertical"
                padding: [0, 40, 0, 30]

                MDLabel:
                    text: "Swiss Cheese Plant"
                    theme_text_color: "Custom"
                    padding_y: 20
                    text_color: 111/255, 145/255, 62/255, 1
                    size_hint: 1, 0.1
                    bold: True
                    font_style: "H6"

                MDLabel:
                    text: "Small plants, like succulents and air plants, are perfect for adding greenery to your desk or your nightstand. "
                    theme_text_color: "Custom"
                    text_color: 55/255, 82/255, 9/255, 1
                    size_hint: 0.8, 1
                    font_size: 12

                MDFloatingActionButton:
                    md_bg_color: 87/255, 145/255, 51/255, 1
                    elevation: 0
                    size_hint: 0.15, 0.35
                    icon: "resources/source/arrow_right.png"
                    icon_size: "10sp"
                    pos_hint: {"x": 0.76}
<HomeScreen>

    MDFloatLayout:
        id: mainwidget
        MDBoxLayout:
            id: mainbody
            content: content
            orientation: "vertical"
            spacing: 10
            padding: [0, 0, 0, 0]

            MDTopAppBar:
                anchor: "top"
                pos_hint: {"y": 0.1}
                title: "Plantsility"
                label_title_font_size: 48
                right_action_items: [['bell-outline']]
                md_bg_color: 1, 1, 1, 1
                specific_text_color: 72/255, 155/255, 104/255, 1
                elevation: 0

            MDTextField:
                mode: "round"
                max_height: "50"
                line_color_focus: 72/255, 155/255, 104/255, 1
                line_color_normal: 72/255, 155/255, 104/255, 1
                fill_color_normal: 230/255, 255/255, 214/255, 1
                size_hint_x: 0.83
                icon_left: "magnify"
                icon_left_color_normal: 72/255, 155/255, 104/255, 1
                icon_left_color_focus: 72/255, 155/255, 104/255, 1
                pos_hint: {"center_x": .5}
                hint_text: "Search plant"

            MDCard:
                radius: 12
                md_bg_color: 230/255, 255/255, 214/255, 1
                size_hint: .8, .04
                pos_hint: {"center_x": .5}
                padding: [7, 3, 7, 5]

                ScrollView:
                    do_scroll_x: True
                    do_scroll_y: False
                    size_hint: 1, 1
                    pos_hint: {"center_y": .5}
                    bar_width: 0

                    SortBar:
                        rec_icon: rec
                        off_icon: office
                        in_icon: indoor
                        out_icon: outdoor
                        exo_icon: exotic
                        spacing: 5
                        adaptive_width: True
                        size_hint: None, 1
                        pos_hint: {"center_y": .5}

                        SortIcon:
                            id: rec
                            text: "Recommend"
                            md_bg_color: 116/255, 197/255, 144/255, 1
                            text_color: "white"

                        SortIcon:
                            id: office
                            text: "Office"

                        SortIcon:
                            id: indoor
                            text: "Indoor"

                        SortIcon:
                            id: outdoor
                            text: "Outdoor"

                        SortIcon:
                            id:exotic
                            text: "Exotic"

            ScrollView:
                id: scrollbody
                content: content
                do_scroll_y: True
                do_scroll_x: False
                size_hint: 1, 1

                MDGridLayout:
                    id: content
                    cols: 2
                #    md_bg_color: 30/255, 30/255, 30/255, 0.1
                    spacing: 10
                    padding: [15, 10, 15, 10]
                    size_hint: 1, 1.4

                    Square:

                    Square:

                    Square:

                    Square:

                    Square:

                    Square:

<SortIcon>
    font_size: 10
    md_bg_color: 230/255, 255/255, 214/255, 1       #116/255, 197/255, 144/255, 1
    size_hint: 1, .83
    theme_text_color: "Custom"
    text_color: "black"
    no_ripple_effect: True

    on_press:
        self.parent.reset_buttons()
        self.set_active()

<Square>
    orientation: "vertical"
    md_bg_color: 230/255, 230/255, 230/255, 1
    radius: 15
    border_radius: 1
    padding: [0, 10, 0, 10]
    content: mainBody

    FitImage:
        source: "resources/source/plant_pot.png"
        size_hint: .87, .7
        pos_hint: {"center_x": .5}

    MDBoxLayout:
        id: mainBody
        name: nameLabel
        size_hint: 1, 0.2
        padding: [20, 0, 20, 0]
        spacing: 10

        MDLabel:
            id: nameLabel
            text:"Peperomia Houseplant"
            font_size: 13
            bold: True
            size_hint: 1.7, 1
            theme_text_color: "Custom"
            text_color: 48/255, 64/255, 34/255, 1

        MDFloatingActionButton:
            pos_hint: {"center_y": .5}
            size_hint: .5, .5
            elevation: 0
            md_bg_color: 87/255, 145/255, 51/255, 1
            icon: "resources/source/arrow_right.png"
            icon_size: "10sp"

<SortBar>
    spacing: 5
    adaptive_width: True
    size_hint: None, 1
    pos_hint: {"center_y": .5}